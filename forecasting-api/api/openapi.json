{
  "openapi": "3.0.0",
  "info": {
    "title": "Category-Based Forecast API",
    "description": "API for retrieving daily, monthly, and yearly sales forecasts based on product categories with async job processing.",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "https://api.yourcompany.com/v1",
      "description": "Production Server"
    },
    {
      "url": "https://api.dev.yourcompany.com/v1",
      "description": "Development Server"
    }
  ],
  "tags": [
    {
      "name": "Forecasts",
      "description": "Operations related to sales forecasts"
    },
    {
      "name": "Jobs",
      "description": "Async job management for forecast generation"
    },
    {
      "name": "Metadata",
      "description": "Information about the forecasting system"
    }
  ],
  "paths": {
    "/forecasts": {
      "get": {
        "summary": "Get Category-Based Forecasts",
        "operationId": "getCategoryForecasts",
        "tags": [
          "Forecasts"
        ],
        "parameters": [
          {
            "name": "category_id",
            "in": "query",
            "description": "The unique identifier of the category for which the forecast is requested (e.g., 'electronics', 'food_and_beverage', 'all_products').",
            "required": true,
            "schema": {
              "type": "string",
              "example": "electronics"
            }
          },
          {
            "name": "forecast_horizon",
            "in": "query",
            "description": "The aggregation level of the forecast (daily, monthly, yearly).",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "daily",
                "monthly",
                "yearly"
              ],
              "example": "daily"
            }
          },
          {
            "name": "start_date",
            "in": "query",
            "description": "The start date of the forecast period (YYYY-MM-DD). The API will return forecasts starting from this date.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-07-01"
            }
          },
          {
            "name": "end_date",
            "in": "query",
            "description": "The end date of the forecast period (YYYY-MM-DD). If not provided, the API defaults to a certain number of periods from start_date.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-07-31"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "The page number for pagination (starts from 1).",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1,
              "example": 1
            }
          },
          {
            "name": "page_size",
            "in": "query",
            "description": "The number of forecast entries per page (max 500).",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 500,
              "default": 100,
              "example": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful retrieval of forecasts.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ForecastResponse"
                },
                "examples": {
                  "daily_forecast": {
                    "summary": "Daily forecast example",
                    "value": {
                      "data": [
                        {
                          "date": "2025-07-01",
                          "category_id": "electronics",
                          "forecast_value": 150.75,
                          "upper_bound": 165.2,
                          "lower_bound": 135,
                          "unit": "sales_units"
                        },
                        {
                          "date": "2025-07-02",
                          "category_id": "electronics",
                          "forecast_value": 148.32,
                          "upper_bound": 162.85,
                          "lower_bound": 133.45,
                          "unit": "sales_units"
                        }
                      ],
                      "pagination": {
                        "total_items": 31,
                        "total_pages": 1,
                        "current_page": 1,
                        "page_size": 100,
                        "has_next_page": false,
                        "has_prev_page": false,
                        "next_page_link": null,
                        "prev_page_link": null
                      },
                      "metadata": {
                        "forecast_generated_at": "2025-07-06T14:30:00Z",
                        "model_version": "v3.1.2",
                        "currency": "INR"
                      }
                    }
                  },
                  "monthly_forecast": {
                    "summary": "Monthly forecast example",
                    "value": {
                      "data": [
                        {
                          "date": "2025-07-01",
                          "category_id": "electronics",
                          "forecast_value": 4525.5,
                          "upper_bound": 4950.75,
                          "lower_bound": 4100.25,
                          "unit": "sales_units"
                        },
                        {
                          "date": "2025-08-01",
                          "category_id": "electronics",
                          "forecast_value": 4680.25,
                          "upper_bound": 5120.8,
                          "lower_bound": 4240.7,
                          "unit": "sales_units"
                        }
                      ],
                      "pagination": {
                        "total_items": 12,
                        "total_pages": 1,
                        "current_page": 1,
                        "page_size": 100,
                        "has_next_page": false,
                        "has_prev_page": false,
                        "next_page_link": null,
                        "prev_page_link": null
                      },
                      "metadata": {
                        "forecast_generated_at": "2025-07-06T14:30:00Z",
                        "model_version": "v3.1.2",
                        "currency": "INR"
                      }
                    }
                  },
                  "yearly_forecast": {
                    "summary": "Yearly forecast example",
                    "value": {
                      "data": [
                        {
                          "date": "2025-01-01",
                          "category_id": "electronics",
                          "forecast_value": 54306,
                          "upper_bound": 59410.5,
                          "lower_bound": 49201.5,
                          "unit": "sales_units"
                        },
                        {
                          "date": "2026-01-01",
                          "category_id": "electronics",
                          "forecast_value": 56250.75,
                          "upper_bound": 61568.25,
                          "lower_bound": 50933.25,
                          "unit": "sales_units"
                        }
                      ],
                      "pagination": {
                        "total_items": 5,
                        "total_pages": 1,
                        "current_page": 1,
                        "page_size": 100,
                        "has_next_page": false,
                        "has_prev_page": false,
                        "next_page_link": null,
                        "prev_page_link": null
                      },
                      "metadata": {
                        "forecast_generated_at": "2025-07-06T14:30:00Z",
